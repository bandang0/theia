bm 170*um, 188*um, 0.,	0.,	1064*nm,	1*W, X = -105*mm, Y = 0*m, Z = 0., Phi = 0,  Name = 'Laser', Ref = 'Las'

#th	X	Y	Z	Theta	Phi	Focal		Diameter			R			T		KeepI		Name			Ref
th 46*cm, 0, 0,  Phi = 0., Focal = 12.5*cm, Diameter = 5*cm, R = 0.1, T = 0.9, KeepI = True, Name = 'Len', Ref = 'L1'

# thin lens (X,Y,Z is the center of the thin lens)
#th	X	Y	Z	Theta	Phi	Focal			Diameter		R		T			KeepI		Name			Ref
th 86*cm, 0, 0, Phi = 0., Focal = 17.5*cm, Diameter = 5*cm, R = 0.1, T = 0.9, KeepI = True, Name = 'Len', Ref = 'len'

# mirror (remember that in this case X,Y,Z are coordinates of the center of the chord of the HR)
